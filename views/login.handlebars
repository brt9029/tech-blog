<div class= "form-div">
<form class="login-form ">
    <h3>Please Login</h3>
    
        <label class="sr-only" for="email-login">Email:</label>
        <input type="text" id="email-login" placeholder="Email address" />
    
        <label class="sr-only" for="password-login">Password:</label>
        <input type="password" id="password-login" placeholder="Password" />

        <button type="submit">Login</button>
   
</form>
</div>

<div class="form-div">
<form class="signup-form ">
    <h3>Please Sign up</h3>
    
        <label class="sr-only" for="username-signup">Username:</label>
        <input type="text" id="username-signup" placeholder="Username" />
   
        <label class="sr-only" for="email-signup">Email:</label>
        <input type="text" id="email-signup" placeholder="Email Address" />
   
        <label class="sr-only" for="password-signup">Password:</label>
        <input type="password" id="password-signup" placeholder="Password" />
   
        <button type="submit">Sign Up</button>
</form>
</div>
